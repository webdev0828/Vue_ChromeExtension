{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "Airfolder",
    "short_name": "Airfolder",
    "author": "spence@github",
    "version": "0.0.12",
    "minimum_chrome_version": "74",
    "icons": {
        "16": "images/af-logo-16x3.png",
        "48": "images/af-logo-48x3.png",
       "128": "images/af-logo-128x3.png"
    },
    "description": "Organize your online content",
    "homepage_url": "https://airfolder.io",
    "incognito": "split",
    "permissions": [
        "<all_urls>",
        "chrome://favicon/",
        "storage",
        "unlimitedStorage",
        "tabs",
        "downloads"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "browser_action": {},
    "content_scripts": [{
        "js": ["contentscript.js"],
        "matches": ["<all_urls>"],
        "all_frames": false,
        "run_at": "document_start"
    }],
    "background": {
        "scripts": [
            "background.js",
            "lib/lz-string.1.4.4-min.js"
        ],
        "persistent": true
    },
    "web_accessible_resources": [
        "sidebar.html"
    ]
}